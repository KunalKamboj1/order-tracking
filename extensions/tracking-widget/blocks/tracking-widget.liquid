{% if block.settings.show_heading %}
  <h2>{{ block.settings.heading }}</h2>
{% endif %}

<iframe
  src="{{ block.settings.widget_url }}?shop={{ shop.permanent_domain }}"
  width="100%"
  height="{{ block.settings.iframe_height }}"
  style="border:none; min-height:300px;"
  loading="lazy">
</iframe>

<noscript>
  <p>JavaScript is required to use the order tracking widget.</p>
  <p><a href="{{ block.settings.widget_url }}?shop={{ shop.permanent_domain }}" target="_blank">Click here to track your order</a></p>
</noscript>

{% schema %}
{
  "name": "Order Tracking Widget",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Widget Heading",
      "default": "Track Your Order"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "number",
      "id": "iframe_height",
      "label": "Widget Height (px)",
      "default": 400
    },
    {
      "type": "text",
      "id": "widget_url",
      "label": "Widget URL",
      "default": "https://my-netlify-app.netlify.app",
      "info": "URL where your tracking widget is hosted (without trailing slash)"
    }
  ]
}
{% endschema %}